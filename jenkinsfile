pipeline {
    agent any

    stages {
        stage('Connect to GitHub') {
            steps {
                checkout scmGit(
                    branches: [[name: '*/main']],
                    extensions: [],
                    userRemoteConfigs: [[
                        url: 'https://github.com/Sabhayor/jenkins-scm.git'
                        credentialsId: 'my-github-PAT'
                    ]]
                )
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    sh 'docker build -t dockerfile .'
                }
            }
        }

        stage('Run Docker Container') {
            steps {
                script {
                    sh 'docker run -itd -p 8081:80 dockerfile'
                }
            }
        }
        post {
            success {
                // Notify on success
                echo 'Pipeline succeeded!'
            }
            failure {
                //Notify on failure
                echo 'Pipline failed!'
            }
        }
    }
}
